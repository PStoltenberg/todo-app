<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="16dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/todoDeadlineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tidsfristen"
                android:textAlignment="center"
                android:textSize="15dp">


            </TextView>
            <TextView
                android:id="@+id/todoPriorityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prioritet"
                android:textAlignment="center"
                android:textSize="15dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="6dp">

            <CheckBox
                android:id="@+id/todoCheckBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:buttonTint="@android:color/holo_green_light">

            </CheckBox>
            <TextView
                android:id="@+id/todoNameText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="Opgave titel"
                android:gravity="center|start"
                android:textSize="20dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/todoEditButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_orange_light"
                android:text="Ret"
                android:layout_marginHorizontal="5dp"
                android:textColor="@android:color/black">

            </Button>
            <Button
                android:id="@+id/todoDeleteButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_marginHorizontal="10dp"
                android:text="Slet"
                android:textColor="@android:color/black">

            </Button>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>